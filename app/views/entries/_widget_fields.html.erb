<div class="edit-widget widget container nested-fields">
  <%= link_to_remove_association f do %>
    <div class="close-button"></div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "name-input2"%>
  </div>
  <div class="field">
    <%= f.label :markdown %>
    <%= f.text_area :markdown %>
  </div>
  <div class="field">
    Default Code Selection -
    <%= f.radio_button :code_visibility, "js", class: "code-visibility-value" %>
    <%= f.label :code_visibility, "JavaScript", :value => "js"  %>
    <%= f.radio_button :code_visibility, "html", class: "code-visibility-value" %>
    <%= f.label :code_visibility, "HTML", :value => "html"  %>
    <%= f.radio_button :code_visibility, "css", class: "code-visibility-value" %>
    <%= f.label :code_visibility, "CSS", :value => "css"  %>
    <%= f.radio_button :code_visibility, "none", class: "code-visibility-value" %>
    <%= f.label :code_visibility, "None", :value => "none"  %>
  </div>

  <%= f.hidden_field :js, class: "js-hidden-value" %>
  <%= f.hidden_field :html, class: "html-hidden-value" %>
  <%= f.hidden_field :css, class: "css-hidden-value" %>

  <%= render 'widgets/embedded_components' %>
</div>
