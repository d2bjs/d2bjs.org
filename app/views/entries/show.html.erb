<div id = "entry">

  <div class = "container" id = "page-header">
    <h1><%= @entry.name %></h1>
    <p>
      <%= @entry.description %>
    </p>
  </div>

  <%= content_tag :div,
                  markup(@entry.markdown),
                  class: "markdown-body container" unless @entry.markdown.to_s.empty?
                  %>

  <div class="widgets">
    <% @entry.widgets.each do |widget| %>
      <%= render "widgets/show", :widget => widget %>
    <% end %>
  </div>

</div>
